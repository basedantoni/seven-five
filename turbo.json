{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "drizzle:generate": {
      "cache": false,
      "outputs": ["migrations"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "migrate": {
      "cache": false,
      "interactive": true,
      "inputs": ["migrations"]
    },
    "push": {
      "cache": false,
      "interactive": true
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "ui": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": ["DATABASE_URL"],
  "globalPassThroughEnv": ["NODE_ENV"]
}
