{
  "extends": "@antho/tsconfig/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/components": ["./src/app/_components/*"],
      "~/hooks": ["./src/app/hooks/*"],
      "~/lib": ["./src/app/lib/*"],
      "~/utils": ["./src/app/lib/utils/*"],
      "@antho/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
